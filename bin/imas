function imasgrep(){

   ## idol_yml„Åã„ÇâÁõ¥Êé•ÊÉÖÂ†±„ÇíÂèñÂæó„Åó„ÄÅidol„ÅÆÁ∑èÊï∞„ÇíÂèñÂæó
    GIRLS_ALL_NUM=$(cat $IDOL_YML | grep -E idol_id | tr -d "\""  |tr -d " "| wc -l )
    GIRLS_ALL_NUM=$(expr $GIRLS_ALL_NUM - 1)

   ## idol_idÊØé„Å´„Éï„É´„Éç„Éº„É†„ÇíÈÖçÂàó„Å´ÂÖ•„Çå„Å¶„ÅÑ„Åè
    GIRLS_NAME_LIST=($(cat $IDOL_YML | grep -E idol_id\|family:\|given:\|aka: | tr -d "\""  |tr -d " "| \
    awk -F":" '$1=="idol_id"{i=$2}$1=="family"{a[i]=$2}$1=="given"{b[i]=$2}$1=="aka"{a[i]=$2}END\
               {for(j = 1; j <= i; j++){printf ("%s%s ",a[j],b[j])}}'))
    
    TMP_DIR=$(mktemp -d)
    FILE_NAME=${FILE##*/}
 #   echo "FILE_NAME" $FILE_NAME  # debug

    # standard-in 
	if [ -p /dev/stdin ] && [ $FLAG_f -eq "1" ]; then     # „Éï„Ç°„Ç§„É´„ÅÆÊñáÂ≠ó„Å´Ê®ôÊ∫ñÂÖ•Âäõ„ÇíÂä†„Åà„Å¶Âá¶ÁêÜ„Åô„Çã
            if [ -f ${FILE} ] ;then
	        cp  $FILE $TMP_DIR/$FILE_NAME.swp
            else 
	        cat - >> $TMP_DIR/$FILE_NAME.swp
                echo "===================================================="
                echo "Please Option \"[-f FILENAME]\" "   
                echo "Not Found " $FILE
                echo "====================================================" 
            fi 
	elif [ -p /dev/stdin ] && [ $FLAG_f -eq "0" ] ;then   # Ê®ôÊ∫ñÂá∫Âäõ„ÅÆ„Åø
	    cat - > $TMP_DIR/$FILE_NAME.swp
	#elif [ -p /dev/stdin ] && [ $FLAG_f -eq "1" ] ;then   # „Éï„Ç°„Ç§„É´„ÅÆ„Åø
	elif [ $FLAG_f -eq "1" ] ;then   # „Éï„Ç°„Ç§„É´„ÅÆ„Åø
           [ -f ${FILE} ] || echo "Please Option \"[-f FILENAME]\" "   
           [ -f ${FILE} ] || echo "Not Found " $FILE 
           [ -f ${FILE} ] || exit 1
	    cp  $FILE $TMP_DIR/$FILE_NAME.swp
        else 
            echo "Please Option \"[-f FILENAME]\" "   
            exit 1 
	fi 

    cd $TMP_DIR
    if [ $FLAG_n -eq "1" ] ;then

        ## ÂØæË±°„Ç¢„Ç§„Éâ„É´„ÅÆidol_id „ÇíÂèñÂæó„Åô„Çã
        for i in `seq 0 $GIRLS_ALL_NUM`;do
#            j=$(expr $i + 1); echo "idol_id:"$j"=" ${GIRLS_NAME_LIST[$i]}  ; j=$(expr $i - 1) #debug
#            echo "NAME =" ${NAME} #debug
                if [ "${GIRLS_NAME_LIST[$i]}" = "${NAME}" ] ; then
                    j=$(expr $i + 1)
                    ## YML„Çí„Éë„Éº„ÇπÂá¶ÁêÜ„Åó„Åü„ÇÇ„ÅÆ„ÇíÂà©Áî®„Åó„Å¶„ÄÅÂØæË±°„Ç¢„Ç§„Éâ„É´„ÅÆÊÉÖÂ†±ÂèñÂæó
                    #NAME_ID=$(parse_yaml $IDOL_YML  |grep idol_id|grep \"$j\" |cut -d"_" -f1)
                    #IDOL_COLOR=$(parse_yaml $IDOL_YML  |grep ${NAME_ID} |grep color |cut -d"\"" -f2)   	#[31mÂ§©Êµ∑Êò•È¶ô[m
		    sed -i -e "s/${GIRLS_NAME_LIST[i]}/\\\e[32m${GIRLS_NAME_LIST[i]}\\\e[m/g"  $FILE_NAME.swp
                fi
        done

    else
        for i in `seq 0 $GIRLS_ALL_NUM`;do
#            j=$(expr $i + 1); echo "idol_id:"$j"=" ${GIRLS_NAME_LIST[$i]}  ; j=$(expr $i - 1) #debug
                   #j=$(expr $i + 1)
                    ## YML„Çí„Éë„Éº„ÇπÂá¶ÁêÜ„Åó„Åü„ÇÇ„ÅÆ„ÇíÂà©Áî®„Åó„Å¶„ÄÅÂØæË±°„Ç¢„Ç§„Éâ„É´„ÅÆÊÉÖÂ†±ÂèñÂæó
                    #NAME_ID=$(parse_yaml $IDOL_YML  |grep idol_id|grep \"$j\" |cut -d"_" -f1)
                    #IDOL_COLOR=$(parse_yaml $IDOL_YML  |grep ${NAME_ID} |grep color |cut -d"\"" -f2)

                    sed -i -e "s/${GIRLS_NAME_LIST[i]}/\\\e[32m${GIRLS_NAME_LIST[i]}\\\e[m/g"  $FILE_NAME.swp
                   # sed -i -e "s/${NAME}/\\\e[32m${NAME}\\\e[m/g"  $FILE_NAME.swp
        done  
    fi
   
  # Defalt Output 
    while read -r line ;do  # -r „Ç®„Çπ„Ç±„Éº„Éó„ÇíË™≠„ÅøËæº„Åø„Åü„ÇÅ„Å´ÂøÖË¶Å
        echo -e ""$line""
    done < $FILE_NAME.swp

rm -rf $TMP_DIR

}


# echo function
function imasecho (){
    if [ $FLAG_P -eq "0" ] && [ $FLAG_m -eq "0" ] ; then
        P_NAME="„Éó„É≠„Éá„É•„Éº„Çµ„Éº"
	MESSAGE="„Ç¢„Ç§„Éû„Çπ"
    elif [ $FLAG_P -eq "0" ]  && [ $FLAG_m -eq "1" ] ; then
        P_NAME="„Éó„É≠„Éá„É•„Éº„Çµ„Éº"
    elif [ $FLAG_P -eq "1" ]  && [ $FLAG_m -eq "0" ] ; then
	MESSAGE="„Ç¢„Ç§„Éû„Çπ"
    fi

    echo "$P_NAME"'„Åï„ÇìÔºÅ '"$MESSAGE"'„Åß„Åô„ÇàÔºÅ'"$MESSAGE"'ÔºÅ'
}

